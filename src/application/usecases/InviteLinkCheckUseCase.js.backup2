  /**
   * ì—´ ë¬¸ìë¥¼ ì¸ë±ìŠ¤ë¡œ ë³€í™˜ (A=0, B=1, ..., Z=25, AA=26, ...)
   */
  columnToIndex(column) {
    let index = 0;
    for (let i = 0; i < column.length; i++) {
      index = index * 26 + (column.charCodeAt(i) - 65) + 1;
    }
    return index - 1;
  }

  /**
